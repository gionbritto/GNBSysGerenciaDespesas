@model GNBSys.GerenciaDespesas.Application.ViewModels.TipoDespesaViewModel

@{
    ViewData["Title"] = "Atualizar " + Model.Nome;
}



<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Tipo Despesa
        <small>Edição Tipo Despesa - @Model.Nome</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Despesas</a></li>
        <li><a href="#">Tipo Despesa</a></li>
        <li class="active">Edição tipo despesa</li>
    </ol>
</section>



<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-8">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Edição</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->

                <form asp-action="Edit" class="form border rounded">
                    <div class="box-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="TipoDespesaId" />
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">


                        </div>
                        <div class="box-footer">
                            <input type="submit" value="Salvar" class="btn btn-success" />&nbsp;&nbsp;
                            <a asp-action="Index" class="btn btn-default">Voltar</a>
                            @*<button type="submit" class="btn btn-primary">Submit</button>*@
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.box -->

        </div>
        <!--/.col (left) -->
    </div>
    <!-- /.row -->
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
