@model GNBSys.GerenciaDespesas.Application.ViewModels.SalarioViewModel

@{
    ViewData["Title"] = "Atualizar";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Salários
        <small>Edição Salário</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Despesas</a></li>
        <li><a href="#">Salários</a></li>
        <li class="active">Edição Salário</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-8">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Edição</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form asp-action="Edit" class="form border rounded">
                    <div class="box-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="SalarioId" />
                        <div class="form-group">
                            <label asp-for="Valor" class="control-label"></label>
                            <input asp-for="Valor" class="form-control" />
                            <span asp-validation-for="Valor" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Mês</label>
                            <select asp-for="MesId" class="form-control" asp-items="ViewBag.MesId"></select>
                        </div>
                        <div class="box-footer">
                            <input type="submit" value="Salvar" class="btn btn-primary" />&nbsp;&nbsp;
                            <a asp-action="Index" class="btn btn-default">Voltar</a>
                        </div>
                    </div>
                </form>
            </div>

        </div>
        <!-- /.box -->

    </div>
    <!--/.col (left) -->
    <!-- /.row -->
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
